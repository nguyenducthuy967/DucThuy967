  package com.degym;

import java.time.LocalDate;

public class PaymentAccount extends BankAccount {
    private String cardNumber;
    private double currentBalance;

    // Constructor
    public PaymentAccount(String accountId, String accountNumber, String accountHolderName, LocalDate creationDate,
                          String cardNumber, double currentBalance) {
        super(accountId, accountNumber, accountHolderName, creationDate);
        this.cardNumber = cardNumber;
        this.currentBalance = currentBalance;
    }

    @Override
    public void processMonthlyInterestOrFee() {
        // Implement monthly fee logic or no logic, as appropriate
        System.out.println("No monthly fee processing needed for payment account.");
    }

    @Override
    public void displayAccountInfo() {
        super.displayAccountInfo();
        System.out.println("Số thẻ: " + cardNumber);
        System.out.println("Số tiền trong tài khoản: " + currentBalance);
    }

    // Methods for deposit and withdrawal can be implemented here or in the abstract class and overridden
    public void withdraw(double amount) {
        if (currentBalance >= amount) {
            currentBalance -= amount;
            System.out.println("Rút tiền thành công. Số dư mới: " + currentBalance);
        } else {
            System.out.println("Số dư không đủ.");
        }
    }

    // Getters and Setters (omitted for brevity)
}
