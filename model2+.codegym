  package com.degym;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;

public abstract class BankAccount {
    private String accountId;
    private String accountNumber;
    private String accountHolderName;
    private LocalDate creationDate;

    // Constructor
    public BankAccount(String accountId, String accountNumber, String accountHolderName, LocalDate creationDate) {
        this.accountId = accountId;
        this.accountNumber = accountNumber;
        this.accountHolderName = accountHolderName;
        this.creationDate = creationDate;
    }

    // Abstract method for business logic (e.g., calculating interest or fees)
    public abstract void processMonthlyInterestOrFee();

    // Generic method to display common information
    public void displayAccountInfo() {
        DateTimeFormatter formatter = DateTimeFormatter.ofPattern("dd/MM/yyyy");
        System.out.println("Id tài khoản: " + accountId);
        System.out.println("Mã tài khoản: " + accountNumber);
        System.out.println("Tên chủ tài khoản: " + accountHolderName);
        System.out.println("Ngày tạo tài khoản: " + creationDate.format(formatter));
    }

    // Getters and Setters (omitted for brevity)
    public String getAccountNumber() { return accountNumber; }
}
