  package com.degym;

import java.time.LocalDate;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class BankManager {
    private List<BankAccount> accounts = new ArrayList<>();
    private Scanner scanner = new Scanner(System.in);

    public void displayMenu() {
        while (true) {
            System.out.println("\n--- MENU CHỨC NĂNG ---");
            System.out.println("1. Thêm tài khoản tiết kiệm");
            System.out.println("2. Thêm tài khoản thanh toán");
            System.out.println("3. Hiển thị tất cả tài khoản");
            System.out.println("4. Thoát");
            System.out.print("Chọn chức năng: ");
            int choice = scanner.nextInt();
            scanner.nextLine(); // Consume newline

            switch (choice) {
                case 1:
                    addSavingsAccount();
                    break;
                case 2:
                    addPaymentAccount();
                    break;
                case 3:
                    displayAllAccounts();
                    break;
                case 4:
                    return;
                default:
                    System.out.println("Lựa chọn không hợp lệ.");
            }
        }
    }

    private void addSavingsAccount() {
        // Implement logic to collect input and create a SavingsAccount object
        // Example:
        System.out.println("Thêm tài khoản tiết kiệm (input data):");
        SavingsAccount sa = new SavingsAccount("S001", "123456", "Nguyen Van A", LocalDate.now(), 10000.0, LocalDate.now(), 5.5, 12);
        accounts.add(sa);
        System.out.println("Đã thêm tài khoản tiết kiệm.");
    }

    private void addPaymentAccount() {
        // Implement logic to collect input and create a PaymentAccount object
        // Example:
        System.out.println("Thêm tài khoản thanh toán (input data):");
        PaymentAccount pa = new PaymentAccount("P001", "654321", "Tran Thi B", LocalDate.now(), "CARD123", 5000.0);
        accounts.add(pa);
        System.out.println("Đã thêm tài khoản thanh toán.");
    }

    private void displayAllAccounts() {
        for (BankAccount account : accounts) {
            System.out.println("-----------------");
            account.displayAccountInfo();
            // Polymorphic call to specific processing method
            account.processMonthlyInterestOrFee();
        }
        System.out.println("-----------------");
    }

    public static void main(String[] args) {
        BankManager manager = new BankManager();
        manager.displayMenu();
    }
}
